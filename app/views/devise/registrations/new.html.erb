	<div class="container">
	  <div class="row justify-content-center">
	    <div class="col-5">
        <h3 class="mb-4 text-center">新規会員登録</h3>

        <%= form_with model: @user, url: user_registration_path, id:'new_user', class: 'new_user', local: true do |f|%>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="col-12 my-3">
              <%= f.label :"名前", class: "control-label" %>
              <%= f.text_field :name, autoforcus: true, autocomplete: "name",  placeholder: "名前", class: 'form-control' %>
            </div>
            <div class="col-12 my-3">
              <%= f.label :"メールアドレス", class: "control-label" %>
              <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: 'form-control' %>
            </div>
            <div class="col-12 my-3">
              <% if @minimum_password_length %>
                <%= f.label :"パスワード(6文字以上)", class: "control-label" %>
              <% end %>
              <%= f.password_field :password, autocomplete: "encrypted_password", class: 'form-control' %>
            </div>
            <div class="col-12 my-3">
              <%= f.label :"パスワード（確認用）", class: "control-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "encrypted_password", class: 'form-control' %>
            </div>
            <div class="col-12 py-4 text-right">
              <%= f.submit "新規登録", class: "col-4 btn btn-success" %>
            </div>
        <% end %>

	    </div>
	  </div>
  </div>