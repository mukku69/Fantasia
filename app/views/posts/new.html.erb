<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
	    <div><%= render 'layouts/error_messages', obj: @post %></div>
      <h1 class="mb-5 text-center">〜新規投稿〜</h1>
      <%= form_with model:@post,local:true do |f| %>
        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
        </div>
        <div class="form-group my-4">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: 'post_title' %>
        </div>
        <div class="form-group my-4">
          <%= f.label :body, "本文" %>
          <%= f.text_area :body, class: 'post_body', id: "textarea" %>
        </div>
        <div class="form-group text-right">
          <%= f.submit "投 稿", class: 'btn btn-outline-light' %>
        </div>
      <% end %>
    </div>
  </div>
</div>