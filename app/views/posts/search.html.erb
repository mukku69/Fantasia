<div class="container">
  <div class="row">
    <div class ="col-12">

        <h1 class="mb-4 text-center">〜検索結果〜</h1>

        <div class="jscroll scroll-list">
          <table class="table">
            <thead>
              <tr>
                <th><%= sort_link(@q, :created_at, "投稿日") %></th>
                <th>ユーザー名</th>
                <th>タイトル</th>
                <th>ジャンル</th>
                <th>本文</th>
                <th>いいね</th>
                <th>コメント</th>
              </tr>
            </thead>
            <% @results.each do |post| %>
            <tbody>
              <tr>
                <td class="col-1"><%= post.created_at.strftime("%Y年%m月%d日") %></td>
                <td class="col-1"><%= post.user.name %></td>
                <td class="col-2"><%= link_to post.title , post_path(post.id) %></td>
                <td class="col-1"><%= post.genre.name %></td>
                <td class="col-3">
                  <div class="grad-item"><%= simple_format post.body %></div>
                  <div class="grad-btn"><%= link_to "続きを読む ➔" , post_path(post.id) ,class:"read-btn" %></div>
                </td>
                <td class="col-1"><%= post.likes.count %></td>
                <td class="col-1"><%= post.comments.count %>
              </tr>
            </tbody>
            <% end %>
          </table>
          <div class="invisible"><%= paginate @results %></div>
        </div>

    </div>
  </div>
</div>
