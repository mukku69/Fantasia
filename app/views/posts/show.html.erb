<h2>投稿詳細</h2>
	<table class='table'>
	  <tr>
      <td><%= @post.title %></td>
      <td><%= @post.body %></td>
      <% if @post.user == current_user %>
        <td><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success edit_post_#{@post.id}" %></td>
        <td><%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}"%></td>
      <% end %>
  </table>

<div class="comments">
<p>コメント件数：<%= @post.comments.count %></p>
<% @post.comments.each do |comment| %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@post, @comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>