<div class="container">
  <h4 class="mt-3">マイページ</h4>
  <div class="row">
    <div class="col-md-6">
      <table class="table-light table table-hover">
        <div class="mb-3 d-flex">
          <h5 class="ml-2 mb-2 font-weight-bold">登録情報</h5>
          <%= link_to "編集する", edit_user_path(current_user), class: "btn btn-sm btn-success ml-5 px-3 table_button" %>
        </div>
        <tr class="col-xs-2">
          <td class="table-secondary">メールアドレス</td>
          <td><%= current_user.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>