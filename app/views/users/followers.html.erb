<div class="container my-5">
  <div class="row justify-content-center">

    <div class="col-3">
      <div class="text-center">
        <%= attachment_image_tag @user, :profile_image, class: "prof_img", fallback: "no_image.png" %>
      </div>
      <div class="text-center py-3"><%= @user.name %></div>
    </div>
    <div class="col-6">
      <div class="pb-3"><h1>フォロワー</h1></div>
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <p><%= link_to user.name, user_path(user.id) %></p>
        <% end %>
      <% else %>
        <p>フォロ-されているユーザーはいません</p>
      <% end %>
    </div>

  </div>
</div>