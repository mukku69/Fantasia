        <li><%= link_to " お問い合わせ", new_contact_path, class: 'nav-menu' %></li>
      <% else %>
        <!-- ログインしていない時 -->
        <li><%= link_to " 投稿一覧", posts_path, class: 'nav-menu fas fa-tree' %></li>
        <li><%= link_to " 新規登録", new_user_registration_path, class: 'nav-menu fas fa-user-plus' %></li>
        <li><%= link_to " ログイン", new_user_session_path, class: 'nav-menu fas fa-sign-in-alt' %></li>
      <% end %>
    </ul>
  </nav>
</div>

