<div class="top-video">
  <%= video_tag("/videos/2021.mp4", autoplay: :true, muted: :true ) %>
</div>
<div id="header-top">
  <nav class="top-nav">
    <ul class="top-ul">
      <% if user_signed_in? %>
        <!--ログイン時-->
        <li><%= link_to " マイページ", user_path(current_user), class: 'nav-menu fas fa-user' %></li>
        <li><%= link_to " 投稿一覧", posts_path, class: 'nav-menu fas fa-tree' %></li>
        <li><%= link_to "新規投稿", new_post_path, class: 'nav-menu fas fa-book-open' %></li>
